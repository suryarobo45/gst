<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>



<script>
    // toggle visiblity when i click the chat layout ..
    $(document).ready(function () {
        var isChatVisible = false;
        $("#per1").click(function (event) {
            event.preventDefault();
            $("#chat1").toggle();
            isChatVisible = !isChatVisible;
            if (isChatVisible) {
                $("#men-img, .content, .overlay").hide();
            } else {
                $("#men-img, .content, .overlay").show();
            }
        });
    });


    // chat menu click open drop down toogle
    $(document).ready(function () {
        $("#summa-click").click(function () {
            $("#summa").slideToggle("fast", function () {
                if ($(this).is(':visible')) {
                    $(this).animate({
                        opacity: 1,
                        scale: '1.2'
                    }, 200);
                } else {
                    $(this).css({
                        opacity: 0.1,
                        scale: '0.5'
                    });
                }
            });
        });
    });




    // paper plane icon effect js
    const textarea = document.getElementById('message');
    const paperPlane = document.getElementById('paper-plane');

    paperPlane.addEventListener('click', () => {
        sendMessage();
    });

    textarea.addEventListener('input', () => {
        adjustTextareaHeight();
    });

    textarea.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' && !event.shiftKey) {
            event.preventDefault(); // Prevent default behavior (form submission)
            sendMessage(); // Send the message
        }
    });

    function sendMessage() {
        const message = textarea.value.trim(); // Get the typed message
        if (message !== '') {
            // Find the chat-img container
            const chatImgContainer = document.querySelector('.chat-img');

            // Create a new row
            const newRow = document.createElement('div');
            newRow.classList.add('row');

            // Create a div for the empty column
            const emptyColumn = document.createElement('div');
            emptyColumn.classList.add('col-lg-6');

            // Append the empty column to the new row
            newRow.appendChild(emptyColumn);

            // Create a div to contain both time and date and sender message box
            const senderAndTimeContainer = document.createElement('div');
            senderAndTimeContainer.classList.add('col-lg-6', 'd-flex', 'flex-column', 'align-items-start', 'justify-content-end', 'mt-2');

            // Get the current date
            const currentDate = new Date();
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
            const month = monthNames[currentDate.getMonth()]; // Get the month as text

            // Format the date to display month as text
            let formattedHour = currentDate.getHours();
            const amPm = formattedHour >= 12 ? 'PM' : 'AM'; // Check if it's PM or AM
            formattedHour = formattedHour % 12 || 12; // Convert to 12-hour format
            const formattedMinutes = ('0' + currentDate.getMinutes()).slice(-2); // Add leading zero to minutes if needed
            const formattedDate = `${month} ${currentDate.getDate()}, ${currentDate.getFullYear()} ${formattedHour}:${formattedMinutes} ${amPm}`;

            // Create a div for the time and date
            const timeAndDate = document.createElement('div');
            timeAndDate.classList.add('time-and-date', 'mb-2');
            timeAndDate.textContent = formattedDate;

            // Split message into paragraphs
            const paragraphs = message.split('\n');

            // Create a div for the sender message box
            const senderMsgBox = document.createElement('div');
            senderMsgBox.classList.add('msg-sender-box', 'p-3', 'position-relative');

            // Create a paragraph element for each line of text
            paragraphs.forEach((paragraph) => {
                const p = document.createElement('p');
                p.textContent = paragraph;
                senderMsgBox.appendChild(p);
            });

            // // Create a tick icon for message sent confirmation
            // const tickIcon = document.createElement('i');
            // tickIcon.classList.add('fas', 'fa-check', 'text-success', 'position-absolute', 'bottom-0', 'end-0', 'me-2');

            // // Append the tick icon to the sender message box
            // senderMsgBox.appendChild(tickIcon);

            // Append the time and date and sender message box to the senderAndTimeContainer
            senderAndTimeContainer.appendChild(timeAndDate);
            senderAndTimeContainer.appendChild(senderMsgBox);

            // Append the senderAndTimeContainer to the new row
            newRow.appendChild(senderAndTimeContainer);

            // Append the new row to the chat-img container
            chatImgContainer.appendChild(newRow);

            // Clear the textarea
            textarea.value = '';

            // Adjust textarea height after sending message
            adjustTextareaHeight();
        }
    }

    // Function to adjust textarea height
    function adjustTextareaHeight() {
        textarea.style.height = ''; // Reset height to auto
        textarea.style.height = textarea.scrollHeight + 'px'; // Set height to scroll height
    }
    function toggleDropdown() {
        var dropdown = document.getElementById("dropdown");
        dropdown.classList.toggle("show");
    }

    // Close the dropdown if the user clicks outside of it
    window.onclick = function (event) {
        if (!event.target.matches('.fa-paperclip')) {
            var dropdowns = document.getElementsByClassName("dropdown-content");
            for (var i = 0; i < dropdowns.length; i++) {
                var openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('show')) {
                    openDropdown.classList.remove('show');
                }
            }
        }
    }

    // paper clip drop-up toggle
    function toggleDropdown() {
        var dropdown = document.getElementById("dropdown");
        dropdown.classList.toggle("active");
    }




    $(document).ready(function () {
        // When the "Document" option is clicked
        $('#documentOption').click(function () {
            // Trigger click event on the hidden file input
            $('#fileInput').click();
        });

        // When the "Image & Videos" option is clicked
        $('#imageVideoOption').click(function () {
            // Trigger click event on the hidden file input
            $('#fileInput').click();
        });

        // Add event listener to the file input element
        $('#fileInput').change(function (event) {
            // Get the selected file
            const file = event.target.files[0];

            // Check if a file is selected
            if (file) {
                // Update the modal content with the file name
                $('#uploadedFileName').text(file.name);

                // Show the modal
                $('#fileUploadedModal').modal('show');

                // Close the dropdown
                $('#dropdown').removeClass('active');
            }
        });
    });






    $(document).ready(function () {
        // Add event listener to the "send" button inside the modal
        $('#sendFileBtn').click(function () {
            // Get the uploaded file name
            const uploadedFileName = $('#uploadedFileName').text().trim();

            // If the file name is not empty
            if (uploadedFileName !== '') {
                // Get the current date and time
                const currentDateTime = getCurrentDateTime();

                // Find the chat-img container
                const chatImgContainer = $('.chat-img');

                // Create a new row for the message
                const newRow = $('<div>').addClass('row');

                // Create a div for the date and time
                const dateTimeDiv = $('<div>').addClass('col-lg-12 text-center mb-2').text(currentDateTime);

                // Append the date and time div to the new row
                newRow.append(dateTimeDiv);

                // Create a div for the empty column
                const emptyColumn = $('<div>').addClass('col-lg-6');

                // Append the empty column to the new row
                newRow.append(emptyColumn);

                // Append the new row to the chat-img container
                chatImgContainer.append(newRow);

                // Create a div to contain the sender message box
                const senderMsgBoxContainer = $('<div>').addClass('col-lg-6 d-flex flex-column align-items-end justify-content-end mt-2');

                // Create a div for the sender message box
                const senderMsgBox = $('<div>').addClass('msg-sender-box p-3 position-relative');

                // Create a paragraph element for the file name
                const fileNameParagraph = $('<p>').addClass('mb-0').text(`File: ${uploadedFileName}`);

                // Append the file name paragraph to the sender message box
                senderMsgBox.append(fileNameParagraph);

                // Create a tick icon for message sent confirmation
                const tickIcon = $('<i>').addClass('fas fa-check text-success position-absolute bottom-0 end-0 me-2');

                // Append the tick icon to the sender message box
                senderMsgBox.append(tickIcon);

                // Append the sender message box to the senderMsgBoxContainer
                senderMsgBoxContainer.append(senderMsgBox);

                // Append the senderMsgBoxContainer to the new row
                newRow.append(senderMsgBoxContainer);

                // Clear the uploaded file name in the modal
                $('#uploadedFileName').text('');

                // Hide the modal
                $('#fileUploadedModal').modal('hide');
            }
        });
    });

    // Function to get the current date and time
    function getCurrentDateTime() {
        const currentDate = new Date();
        const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        const month = monthNames[currentDate.getMonth()];
        const date = currentDate.getDate();
        const year = currentDate.getFullYear();
        const hours = currentDate.getHours().toString().padStart(2, '0');
        const minutes = currentDate.getMinutes().toString().padStart(2, '0');
        return `${month} ${date}, ${year} ${hours}:${minutes}`;
    }
</script>
</body>

</html>
